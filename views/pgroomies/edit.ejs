    <%layout('layouts/boilerplate')%>
        <div class="row">
            <h1 class="text-center">Edit PG Rooms</h1>
            <div class="col-6 offset-3">
                <form action="/pgroomies/<%= pgroomies.id%>?_method=PUT" method="POST" novalidate class="validation">
                    <div class="mb -3">
                        <label class="form-label" for="title">Title</label>
                        <input class="form-control" type="text" id="title" name="pgroomies[title]" value="<%=pgroomies.title%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb -3">
                        <label class="form-label" for="location">Location</label>
                        <input class="form-control" type="text" id="location" name="pgroomies[location]" value="<%=pgroomies.location%>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a title
                        </div>
                    </div>
                    <div class="mb -3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" type="text" id="description" name="pgroomies[description]" <%=pgroomies.description%> required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a title
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="price">Price</label>
                        <div class="input-group">
                            <span class="input-group-text" id="price-label">â‚¹</span>
                            <input type="text" class="form-control" id="price" aria-label="price"
                            aria-describedby="price-label" name="pgroomies[price]" value="<%=pgroomies.price%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please give a title
                            </div>
                        </div>
                    </div>
                    <div class="mb-3" >
                        <button class="btn btn-success">Add PG Room</button>
                      </div>
                </form>
                <a href="/pgroomies">All PG Rooms</a>
            </div>
        </div>

